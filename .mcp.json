{
  "mcpServers": {
    "drift": {
      "command": "driftdetect-mcp",
      "args": []
    },
    "github": {
      "command": "docker",
      "args": [
        "run",
        "-i",
        "--rm",
        "-e",
        "GITHUB_PERSONAL_ACCESS_TOKEN",
        "ghcr.io/github/github-mcp-server"
      ],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "$GITHUB_PERSONAL_ACCESS_TOKEN"
      }
    },
    "playwright": {
      "command": "npx",
      "args": [
        "@playwright/mcp@latest"
      ]
    }
  },
  "_comments": {
    "sqlite": "SQLite MCP disabled - DB lives inside Docker volume (aionui_data). For local Electron dev, use: npx -y @modelcontextprotocol/server-sqlite ~/.config/AionUi/aionui.db"
  }
}
